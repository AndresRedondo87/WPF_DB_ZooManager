<Window x:Class="WPF_DB_ZooManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_DB_ZooManager"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Label  Content="Zooliste" HorizontalAlignment="Left" Margin="27,27,0,0" VerticalAlignment="Top" Height="31" Width="160" FontWeight="Bold"/>
        <ListBox Name="listZoos" SelectionChanged="listZoos_SelectionChanged" HorizontalAlignment="Left" Margin="27,58,0,67" Width="150"/>
        <Label  Content="Tiere in augewähltem Zoo" HorizontalAlignment="Left" Margin="220,27,0,0" VerticalAlignment="Top" Height="31" Width="160" FontWeight="Bold"/>
        <ListBox x:Name="listAssociatedAnimals" HorizontalAlignment="Left" Margin="220,58,0,67" Width="150"/>
        <Label  Content="Tierliste" HorizontalAlignment="Right" Margin="0,27,13,0" VerticalAlignment="Top" Height="31" Width="160" FontWeight="Bold"/>
        <ListBox x:Name="listAllAnimals" SelectionChanged="listAnimals_SelectionChanged" HorizontalAlignment="Right" Margin="0,58,23,67" Width="150"/>

    </Grid>
</Window>
